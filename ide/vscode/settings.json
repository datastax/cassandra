{
    // Java Language Server Configuration
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m -Xlog:disable --add-exports=java.rmi/sun.rmi.registry=ALL-UNNAMED --add-exports=java.rmi/sun.rmi.transport.tcp=ALL-UNNAMED --add-exports=java.base/jdk.internal.ref=ALL-UNNAMED --add-exports=java.base/sun.nio.ch=ALL-UNNAMED --add-exports=jdk.unsupported/sun.misc=ALL-UNNAMED --add-exports=java.management/com.sun.jmx.mbeanserver=ALL-UNNAMED --add-opens=java.base/jdk.internal.ref=ALL-UNNAMED --add-opens=java.base/sun.nio.ch=ALL-UNNAMED --add-opens=jdk.management/com.sun.management.internal=ALL-UNNAMED",
    // Java Compiler Configuration - Force Java 11 compliance
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "disabled",
    "java.project.encoding": "UTF-8",
    // Java Formatting Configuration (matching IntelliJ code style)
    "java.format.settings.url": ".vscode/java-formatter.xml",
    "java.format.settings.profile": "Cassandra",
    "java.format.enabled": true,
    "java.format.comments.enabled": false,
    // Import Organization (matching IntelliJ import order)
    "java.completion.importOrder": [
        "java",
        "javax",
        "",
        "com.google.common",
        "org.apache.log4j",
        "org.apache.commons",
        "org.cliffc.high_scale_lib",
        "org.junit",
        "org.slf4j",
        "",
        "#"
    ],
    // Code Style Settings
    "java.codeGeneration.insertionLocation": "afterCursor",
    "java.codeGeneration.generateComments": true,
    "java.codeGeneration.useBlocks": true,
    // Editor Settings for Java
    "[java]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.rulers": [
            120
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    // File Associations
    "files.associations": {
        "*.g": "antlr"
    },
    // Files to exclude from explorer
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "build/": true,
        ".build/": true,
        "bin/": true
    },
    // Search exclusions
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "build/": true,
        ".build/": true,
        "bin/": true
    },
    // Java Project Configuration - Maven enabled
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": true,
    "java.import.exclusions": [
        "**/node_modules/**",
        "**/.metadata/**",
        "**/archetype-resources/**",
        "**/META-INF/maven/**"
    ],
    "java.configuration.runtimes": [],
    "java.jdt.ls.lombokSupport.enabled": false,
    // Maven handles dependency resolution only
    // Note: ANTLR sources are generated by Ant (ant gen-cql3-grammar), not Maven
    "java.autobuild.enabled": true,
    "java.maxConcurrentBuilds": 1,
    "java.import.maven.offline.enabled": false,
    // Disable telemetry
    "telemetry.telemetryLevel": "off"
}